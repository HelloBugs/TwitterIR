<?xml version="1.0" encoding="UTF-8"?> 
<Configuration> 
  <Appenders> 
    <File name="FileLogger" fileName="/log/TwitterIR.log" append="false"> 
      <PatternLayout pattern="%d %t %-5p %c{1} - %m%n"/> 
    </File> 
    <Console name="STDOUT" target="SYSTEM_OUT"> 
      <PatternLayout pattern="%d %-5p [%t] %C{1} (%F:%L) - %m%n"/> 
    </Console> 
  </Appenders> 
  <Loggers> 
    <Logger name="ir.TwitterIR" level="trace" additivity="false"> 
      <AppenderRef ref="FileLogger"/> 
    </Logger> 
    <Root level="info"> 
      <AppenderRef ref="STDOUT"/> 
    </Root> 
  </Loggers> 
</Configuration>